
@{
    ViewBag.Title = "List";
}

<h2>List</h2>
<br />
@if (TempData["Msg"] != null)
{
    <span class="alert alert-info">@TempData["Msg"]</span>
}
<a class="btn btn-danger" href="/Student/Create">Create</a>
@if (Model.Count == 0)
{
    <h3>No Data Found</h3>
}
else
{
    <table class="table table-bordered">
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Cgpa</th>
            <th>Actions</th> 
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Cgpa</td>
                <td>
                    <a class="btn btn-primary" href="@Url.Action("Details", "Student", new { id = item.Id })">Details Info</a>
                </td>
            </tr>
        }
    </table>
}
